# =============================================================================
# TIMECLOCK SERVER CONFIGURATION (.env)
# =============================================================================
# Copy this file to .env in your project directory and update the values

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server binding
TIMECLOCK_HOST=0.0.0.0
TIMECLOCK_PORT=8000
TIMECLOCK_SSL_PORT=8443

# Logging
TIMECLOCK_LOG_LEVEL=info

# Workers (set to 1 for development, higher for production)
TIMECLOCK_WORKERS=1

# =============================================================================
# HTTPS/SSL CONFIGURATION
# =============================================================================

# Enable HTTPS (recommended for production)
USE_HTTPS=true

# SSL certificate paths (will auto-generate if not found)
SSL_CERT_FILE=./certs/cert.pem
SSL_KEY_FILE=./certs/key.pem

# Certificate generation settings
SSL_CERT_DAYS=365
SSL_CERT_COUNTRY=US
SSL_CERT_STATE=CA
SSL_CERT_CITY=Westminster
SSL_CERT_ORG=MyrasKitchen
SSL_CERT_CN=100.127.19.112

# =============================================================================
# WIFI LOCATION VERIFICATION
# =============================================================================

# Enable/disable WiFi verification (set to false for testing)
WIFI_VERIFICATION_ENABLED=true

# Approved workplace networks (comma-separated, no spaces around commas)
# UPDATE THESE WITH YOUR ACTUAL WIFI NETWORK NAMES
APPROVED_WORKPLACE_NETWORKS=SpectrumSetup-CB,veltalldev

# Pattern matching for dynamic SSIDs (comma-separated)
WIFI_PATTERN_MATCHING_ENABLED=false
APPROVED_NETWORK_PATTERNS=YourCompany*,Office*,Corp*

# Logging and monitoring
LOG_ALL_WIFI_ATTEMPTS=true
ALERT_ON_FAILED_ATTEMPTS=true

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Admin secret key (CHANGE THIS!)
TIMECLOCK_ADMIN_SECRET=correct-horse-battery-staples

# Restrict admin endpoints to localhost only
LOCALHOST_ONLY_ADMIN=false

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database file path
DATABASE_PATH=timeclock.db

# QR code expiration (minutes) - for legacy compatibility
QR_CODE_EXPIRY_MINUTES=3

# Auto-seed test data in development
SEED_TEST_DATA=false

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application metadata
APP_NAME=Timeclock System
APP_VERSION=1.1.0
APP_DESCRIPTION=Employee Time Tracking with WiFi Verification

# Feature flags
ENABLE_DEBUG_ENDPOINTS=false
ENABLE_LEGACY_QR_ENDPOINTS=true

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Allowed origins for CORS (comma-separated)
# Use * for development, specific domains for production
CORS_ORIGINS=*

# CORS credentials
CORS_ALLOW_CREDENTIALS=false

# =============================================================================
# TIMEZONE CONFIGURATION
# =============================================================================

# Server timezone (optional - defaults to system timezone)
TIMEZONE=America/Los_Angeles

# Date/time format for logging
DATETIME_FORMAT=%Y-%m-%d %H:%M:%S

# =============================================================================
# DEVELOPMENT/TESTING SETTINGS
# =============================================================================

# Development mode (enables auto-reload, debug features)
DEVELOPMENT_MODE=false

# Enable API documentation at /docs
ENABLE_API_DOCS=true

# Log SQL queries (for debugging)
LOG_SQL_QUERIES=false

# =============================================================================
# BACKUP AND SYNC SETTINGS (Future Use)
# =============================================================================

# Cloud database sync (not implemented yet)
ENABLE_CLOUD_SYNC=false
CLOUD_SYNC_INTERVAL_MINUTES=60

# Backup settings
ENABLE_AUTO_BACKUP=false
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30

# =============================================================================
# NOTIFICATION SETTINGS (Future Use)
# =============================================================================

# Email notifications
ENABLE_EMAIL_NOTIFICATIONS=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@company.com
SMTP_PASSWORD=your-app-password

# Webhook notifications
ENABLE_WEBHOOK_NOTIFICATIONS=false
WEBHOOK_URL=https://your-webhook-endpoint.com/timeclock

# =============================================================================
# EXAMPLES AND NOTES
# =============================================================================

# Example for multiple workplace networks:
# APPROVED_WORKPLACE_NETWORKS=MainOfficeWiFi,MainOffice-5G,GuestNetwork,ConferenceRoom,Warehouse-WiFi

# Example for pattern matching:
# APPROVED_NETWORK_PATTERNS=CompanyName*,Office*,Branch*

# Example production CORS:
# CORS_ORIGINS=https://timeclock.yourcompany.com,https://admin.yourcompany.com

# Security best practices:
# - Change TIMECLOCK_ADMIN_SECRET to a strong, unique value
# - Set LOCALHOST_ONLY_ADMIN=true for production
# - Use specific CORS_ORIGINS in production (not *)
# - Enable HTTPS in production (USE_HTTPS=true)
# - Use strong, unique SSL certificates in production
